<div class=":component">
  <div class="wrapper">
    {{textarea
      id=ids.input
      placeholder=placeholder
      disabled=states.disabled
      aria-labelledby=ids.label
      class=(concat "input"
                    " "
                    (if states.disabled "input--disabled")
                    " "
                    (if states.error "input--error"))
      rows=rows
      focus-out=focus-out}}
  </div>
</div>
