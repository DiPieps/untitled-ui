<div class=":component">
  <div class="wrapper">
    {{textarea
      id=ids.input
      placeholder=placeholder
      disabled=states.disabled
      aria-labelledby=ids.label
      class=(concat "ui-textarea--default--input"
                    " "
                    (if states.disabled "ui-textarea--defaultinput--disabled")
                    " "
                    (if states.error "ui-textarea--defaultinput--error"))
      rows=rows
      focus-out=focus-out}}
  </div>
</div>
