{{#if onclick}}
  {{#ui-button-group size=size id=targetId as |group|}}
    {{#group.button onclick=onclick}}
      {{yield}}
    {{/group.button}}

    {{#group.button onclick=popup.toggle active=states.active}}
      {{ui-icon icon="dropbutton" class="ui-dropbutton-trigger--icon"}}
    {{/group.button}}
  {{/ui-button-group}}

{{else}}
  {{#ui-button size=size id=targetId onclick=popup.toggle active=states.active}}
    {{yield}}
    {{ui-icon icon="dropbutton" class="ui-dropbutton-trigger--icon"}}
  {{/ui-button}}
{{/if}}
