<div class=":component
            {{classes.size}}">
  <div class="wrapper">
    {{input
      id=ids.input
      type=type
      placeholder=placeholder
      disabled=states.disabled
      aria-labelledby=ids.label
      class=(concat "input"
                    " "
                    (if states.disabled "input--disabled")
                    " "
                    (if states.error "input--error"))
      focus-out=focus-out}}
  </div>
</div>
