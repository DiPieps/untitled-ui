{{#ember-wormhole to="ui-modal"}}
  <div
    id={{generatedModalId}}
    class=":component {{classes.class}} {{classes.size}}"
  >
    <div class="modal">
      {{yield (hash
        panel=(component "ui-panel" kind="modal")
        close=(action "close")
      )}}
    </div>

    {{ui-modal-backdrop kind=kind onclick=(action "close")}}
  </div>
{{/ember-wormhole}}
