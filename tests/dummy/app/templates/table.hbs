{{#ui-panel as |panel|}}
  {{#panel.titlebar}}
    Table
  {{/panel.titlebar}}

  {{#panel.content}}

    {{#ui-table data=data sortBy=sortBy as |table|}}
      {{#table.rowLayout as |layout|}}
        {{#layout.column label="ID" flex=1}}
          {{layout.data.id}}
        {{/layout.column}}

        {{#layout.column label="Name" flex=4 sortable=true}}
          {{layout.data.name}}
        {{/layout.column}}

        {{#layout.column label="Email" flex=6 sortable=true}}
          {{layout.data.email}}
        {{/layout.column}}
      {{/table.rowLayout}}

      {{#table.rowLayout breakpoint=800 as |layout|}}
        {{#layout.column label="Name" flex=4 sortable=true}}
          {{layout.data.name}} <br />
          {{layout.data.id}}
        {{/layout.column}}

        {{#layout.column label="Email" flex=6 sortable=true}}
          {{layout.data.email}}
        {{/layout.column}}
      {{/table.rowLayout}}
    {{/ui-table}}

  {{/panel.content}}
{{/ui-panel}}
